{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "./dist/",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noEmitOnError": true,
		"removeComments": true,
		"sourceMap": true,
		"target": "es5",
		"strictNullChecks": false,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": ["es2017", "dom"],
		"typeRoots": ["node_modules/@types"],
		"baseUrl": "./"
	},
	"exclude": ["node_modules"]
}
